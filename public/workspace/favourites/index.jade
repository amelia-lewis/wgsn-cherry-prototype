extends ../../layout

block append vars
  - bodyclass = 'workspace-favourites-view'

block prepend title
  | Favourites | 

block content
  include ../../partials/header

  .row.title-row.border-bottom
    .title-block.block-sm.pull-left
      h2.tight.inline-block WGSN Workspace
      .block-left-xs.inline-block
