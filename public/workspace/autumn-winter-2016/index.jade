extends ../../layout

block append vars
  - bodyclass = 'workspace-view workspace-view-autumn-winter-2016'

block prepend title
  | Workspace | 

block content
  .row.page-content.show-left-side-panel
    include ../../partials/workspace/left-side-panel
    
    .right-side-panel
      .row.title-row.border-bottom
        .title-block.block-md.pull-left
          h1.tight.inline-block Workspace
          //- .block-xxs.inline-block.board-name.hoverable: span My Boards
          //- .block-xxs.inline-block: i.icon.icon-angle-right
          .block-xxs.inline-block.board-name.hoverable.btn-top-board-context-menu
            span Autumn/Winter 2016
            span.board-number 152
            i.icon.icon-caret-down
            include ../../partials/context-menus/top-board-context-menu
          .inline-block.hoverable.btn-share: i.icon.icon-user
      
        include ../../partials/workspace/utility-block

      .btn-left-side-panel.hoverable: i.icon.icon-angle-left
      include ../../partials/files-row
      include ../../partials/floating-utility-row
    
    include ../../partials/workspace/comments-panel