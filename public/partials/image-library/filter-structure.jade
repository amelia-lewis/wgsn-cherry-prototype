mixin filter(id, title, viewall, ...items)
  .filter.accordion-section.closed
    .accordion-title.overflow-auto.hoverable(id="filter-btn-" + id)
      span.wgsn-font.pull-left= title
      i.section-expand-icon.icon.icon-plus.pull-right.tight
    
    .accordion-content
      ul.clean.overflow-auto
        each item in items
          li
            label(for=item)
              input.pull-left(type="checkbox" id=item)
              span= item
      
      .accordion-footer.overflow-auto
        p.tight.wgsn-font.hoverable.pull-left Reset filter
        if viewall
          p.tight.wgsn-font.btn-view-all.hoverable.pull-right(id="btn-view-all-" + id)
            span.block-right-xxs View all
            i.icon.icon-angle-right.tight


