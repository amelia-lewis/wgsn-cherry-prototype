mixin filter(id, title, viewall, filteredby, ...items)
  .filter.accordion-section.closed(id="filter-" + id)
    .accordion-title.overflow-auto.hoverable(id="filter-btn-" + id)
      span.wgsn-font.pull-left= title
      i.section-expand-icon.icon.icon-angle-right.pull-right.text-smaller
    
    .accordion-content
      .list-container.block-hor-md.block-bot-sm
        each item in items
          label.checkbox-radio(for=item)= item
            input(type="checkbox" id=item)
      
      if viewall
        .accordion-footer.overflow-auto
          p.text-underline.btn-view-all.hoverable.pull-left.tight(id="btn-view-all-" + id) View all


