mixin filter(id, title, viewall, ...items)
  .filter
    .filter-title.overflow-auto.hoverable(id="filter-btn-" + id)
      span.wgsn-font.pull-left= title
      i.section-expand-icon.icon.icon-plus.pull-right.tight
    
    if viewall
      .filter-content.has-view-all
        ul.clean.overflow-auto
          each item in items
            li
              label(for=item)
                input.pull-left(type="checkbox" id=item)
                span= item
        
        .block-hor-sm.block-ver-xs.text-right: p.tight.text-underline.btn-view-all.hoverable View all

    if !viewall
      .filter-content
        ul.clean.overflow-auto
          each item in items
            li
              label(for=item)
                input.pull-left(type="checkbox" id=item)
                span= item


