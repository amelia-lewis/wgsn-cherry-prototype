mixin filter-tag(search, name)
  if search  
    .filter-tag.filter-search-tag.border.hoverable.inline-block
      span Searched for: "
      span.text-bold= search
      span "

  if name
    .filter-tag.border.hoverable.inline-block
      span= name
      i.icon.icon-cross

.row.filter-row.block-hor-sm.block-top-sm.hidden-workspace
  h4.pull-left.block-ver-xs.tight.block-right-xs.block-left-xxs Filter by:
  +filter-tag("pea coats", "")
  +filter-tag("", "Yeezy")
  +filter-tag("", "Chanel")
  +filter-tag("", "Adidas")
