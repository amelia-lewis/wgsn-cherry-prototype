.row.utility-row.border-bottom
  .col-xs-6.col-sm-4
    .block-xs
      .search-input
        input(type="text", placeholder="Search this board")
        span.icon.border: i.fa.fa-search

  .col-xs-6.col-sm-8.text-right
    .block-top-xs
      .block-xs.block-inline
        span Displaying 15 of 1000 items

      .block-xs.block-inline: p |
      
      .block-xs.block-inline
        i.util-checkbox.fa.fa-square-o.select-all
        span Select all (1000)

      .block-xs.block-inline: p |
      
      .block-xs.block-inline
        i.fa.fa-gear

      .block-xs.block-inline: p |
      
      .block-xs.block-inline
        i.fa.fa-th.disabled.hoverable
        i.fa.fa-th-large.hoverable
        i.fa.fa-square.disabled.hoverable
        i.fa.fa-columns.disabled.hoverable

      .block-xs.block-inline: p |
      
      .block-xs.block-inline
        i.fa.fa-plus-square.multi-utility-icon.hoverable
        i.fa.fa-download.multi-utility-icon.hoverable
        i.fa.fa-print.multi-utility-icon.hoverable
        i.fa.fa-paper-plane.multi-utility-icon.hoverable
        i.fa.fa-trash.multi-utility-icon.hoverable
        i.fa.fa-ellipsis-h

        ul.context-menu.text-left#utility-row-context-menu
          li.block-xs.tight.border-bottom
            i.fa.fa-plus-square
            span Add to a Board
          li.block-xs.tight.border-bottom
            i.fa.fa-download
            span Download
          li.block-xs.tight.border-bottom
            i.fa.fa-print
            span Print
          li.block-xs.tight.border-bottom
            i.fa.fa-paper-plane
            span Send
          li.block-xs.tight
            i.fa.fa-trash
            span Delete