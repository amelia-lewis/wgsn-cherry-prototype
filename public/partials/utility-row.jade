.row.utility-row.border-bottom
  .col-xs-6.col-sm-4
    .block-xs
      .input-container.hidden-image-library
        input(type="text", placeholder="Search this board")
        span.icon.border: i.fa.fa-search

      .sort-input.hidden-workspace.block-hor-xs
        span Sort:
        select
          option Best match
          option Newest first
          option Oldest first

  .col-xs-6.col-sm-8.text-right
    .block-xs
      .block-hor-xs.inline-block
        span Displaying 15 of 1000 items

      .inline-block: p |
      
      .block-hor-xs.inline-block
        i.util-checkbox.fa.fa-square-o.select-all
        span Select all (1000)
      
      .block-hor-xs.inline-block
        i.fa.fa-gear.hoverable

        ul.context-menu.text-left#utility-row-settings-context-menu
          .block-xs
            li
              span Show Captions
              i.toggle.fa.fa-toggle-on.pull-right#toggle-show-caption
            li
              span Show Filenames
              i.toggle.fa.fa-toggle-off.pull-right#toggle-show-filename
          .block-xs.text-center.border-top  
            li
              span.text-underline More Settings
      
      .block-hor-xs.inline-block
        .btn-view-option.inline-block.hoverable.border.disabled#btn-view-option-sm: i.fa.fa-th
        .btn-view-option.inline-block.hoverable.border#btn-view-option-md: i.fa.fa-th-large
        .btn-view-option.inline-block.hoverable.border.disabled#btn-view-option-lg: i.fa.fa-square
        .btn-view-option.inline-block.hoverable.border.disabled#btn-view-option-details: i.fa.fa-columns
      
      .block-hor-xs.inline-block
        i.fa.fa-plus-square.multi-utility-icon.hoverable
        i.fa.fa-download.multi-utility-icon.hoverable
        i.fa.fa-print.multi-utility-icon.hoverable
        i.fa.fa-paper-plane.multi-utility-icon.hoverable
        i.fa.fa-trash.multi-utility-icon.hoverable
        i.fa.fa-ellipsis-h.hoverable

        ul.context-menu.text-left#utility-row-context-menu
          .block-xs.border-bottom
            li
              i.fa.fa-plus-square
              span Add to a Board
            li
              i.fa.fa-download
              span Download
            li
              i.fa.fa-print
              span Print
            li
              i.fa.fa-paper-plane
              span Send
          .block-xs
            li
              i.fa.fa-trash
              span Delete