mixin board-row(name, number, level, caret, shared)
  li.board-row(class="level-" + level)
    if caret == "open"
      i.fa.fa-caret-down
    else if caret == "closed"
      i.fa.fa-caret-right
    else
      i.spacer
    i.fa.fa-folder
    span.board-name= name 
    span.board-number.text-bold= number
    if shared == "yes"
      i.fa.fa-users
    i.fa.fa-ellipsis-h

    ul.board-context-menu.clean.border.box-shadow
      li.block-sm.tight.border-bottom
        i.fa.fa-plus
        span Create new board
      li.block-sm.tight.border-bottom
        i.fa.fa-share
        span Share
      li.block-sm.tight.border-bottom
        i.fa.fa-clone
        span Duplicate
      li.block-sm.tight.border-bottom
        i.fa.fa-pencil
        span Rename
      li.block-sm.tight.border-bottom
        i.fa.fa-download
        span Download
      li.block-sm.tight.border-bottom
        i.fa.fa-upload
        span Upload
      li.block-sm.tight.border-bottom
        i.fa.fa-print
        span Print
      li.block-sm.tight.border-bottom
        i.fa.fa-paper-plane
        span Send
      li.block-sm.tight.border-bottom
        i.fa.fa-bell-slash-o
        span Turn off notifications
      li.block-sm.tight.text-center.border-bottom
        i.fa.fa-circle.label-red
        i.fa.fa-circle.label-orange
        i.fa.fa-circle.label-yellow
        i.fa.fa-circle.label-green
        i.fa.fa-circle.label-blue
        i.fa.fa-circle.label-purple
      li.block-sm.tight
        i.fa.fa-trash
        span Delete

mixin person-row(name, level, caret)
  li.person-row(class="level-" + level)
    if caret == "open"
      i.fa.fa-caret-down
    else if caret == "closed"
      i.fa.fa-caret-right
    else
      i.spacer
    i.fa.fa-user
    span= name

