mixin board-row(link, name, number, level, label, caret, shared)
  if link
    a.board-row.block-hor-md.hoverable.overflow-auto(class="level-" + level href=link)
      if caret == "open"
        i.icon.icon-caret-down.pull-left.block-right-xxs
      else if caret == "closed"
        i.icon.icon-caret-right.pull-left.block-right-xxs
      else
        i.spacer.pull-left.block-right-xxs
      if shared == true
        i.icon.icon-folder-shared-filled.pull-left.block-right-xxs
      if shared == false
        i.icon.icon-folder-filled.pull-left.block-right-xxs
      span.board-name.pull-left.block-right-xxs= name
      if label == true
        i.icon.icon-circle.pull-left.block-right-xxs
      i.icon.icon-ellipsis
      .btn.btn-black.btn-sm.close-modal Save
  
  else
    .board-row.block-hor-md.hoverable.overflow-auto(class="level-" + level)
      if caret == "open"
        i.icon.icon-caret-down.pull-left.block-right-xxs
      else if caret == "closed"
        i.icon.icon-caret-right.pull-left.block-right-xxs
      else
        i.spacer.pull-left.block-right-xxs
      if shared == true
        i.icon.icon-folder-shared-filled.pull-left.block-right-xxs
      if shared == false
        i.icon.icon-folder-filled.pull-left.block-right-xxs
      span.board-name.pull-left.block-right-xxs= name
      if label == true
        i.icon.icon-circle.pull-left.block-right-xxs
      i.icon.icon-ellipsis
      .btn.btn-black.btn-sm.close-modal Save

