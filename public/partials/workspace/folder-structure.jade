mixin board-row(link, name, number, level, label, caret, shared)
  if link
    a.board-row(class="level-" + level href=link)
      if caret == "open"
        i.icon.icon-caret-down
      else if caret == "closed"
        i.icon.icon-caret-right
      else
        i.spacer
      span.board-name= name
      if shared == true
        i.icon.icon-user
      if label == true
        i.icon.icon-circle
      //- span.board-number= number
      i.icon.icon-ellipsis
  else
    .board-row(class="level-" + level)
      if caret == "open"
        i.icon.icon-caret-down
      else if caret == "closed"
        i.icon.icon-caret-right
      else
        i.spacer
      span.board-name= name
      if shared == true
        i.icon.icon-user
      if label == true
        i.icon.icon-circle
      //- span.board-number= number
      i.icon.icon-ellipsis

mixin person-row(name, level, caret)
  .person-row.hoverable(class="level-" + level)
    if caret == "open"
      i.icon.icon-caret-down
    else if caret == "closed"
      i.icon.icon-caret-right
    else
      i.spacer
    //- i.icon.icon-user
    span.text-bold= name

mixin team-row(name, level, caret)
  .team-row.hoverable(class="level-" + level)
    if caret == "open"
      i.icon.icon-caret-down
    else if caret == "closed"
      i.icon.icon-caret-right
    else
      i.spacer
    span.text-bold= name


