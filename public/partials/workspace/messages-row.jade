mixin message(unread, img, initials, name, time, attachments, subject, message)
  .message.border-bottom.hoverable.message-closed
    .row.message-preview.block-sm
      if unread
        .unread-dot.pull-left
      if img
        .block-right-xs.pull-left: .avatar(style="background-image: url('" + img + "')")
      else
        .block-right-xs.pull-left: .avatar= initials

      .pull-left
        p.tight
          span.message-name.text-bold= name
          span.message-time.text-grey.block-left-xxs= time
        p.tight
          span= attachments
          span &nbsp; &middot; &nbsp;
          span= subject

      .block-top-xs.pull-right: i.icon.icon-trash

    .row.message-content-container.border-top
      .message-content.block-sm
        p= message

