.row.workspace-utility-row.block-top-sm
  .col-xs-12.col-sm-8
    .pull-left
      input.search-input(type="text", placeholder="Search this folder")

    .pull-left.block-left-sm.btn-view-option-container
      .btn-view-option.disabled.btn-view-option-sm: i.icon.icon-grid-sm
      .btn-view-option.btn-view-option-md: i.icon.icon-grid-md
      .btn-view-option.disabled.btn-view-option-lg: i.icon.icon-grid-lg
      .btn-view-option.disabled.btn-view-option-details: i.icon.icon-grid-details

    .flex-center.pull-left.block-left-xs
      .btn-settings.utility-icon: i.icon.icon-gear
      include ../../partials/context-menus/utility-row-settings-context-menu
    
  .col-xs-12.col-sm-4.text-right
    .utility-icon.btn-share.has-tooltip(data-tooltip="Share folder"): i.icon.icon-user
    .utility-icon.has-tooltip(data-tooltip="Upload files"): i.icon.icon-upload
    .utility-icon.btn-download.has-tooltip(data-tooltip="Download folder"): i.icon.icon-download
    .utility-icon.btn-send.has-tooltip(data-tooltip="Send folder"): i.icon.icon-paper-plane
    .utility-icon.has-tooltip(data-tooltip="Delete folder"): i.icon.icon-trash
    .utility-icon.btn-comments: i.icon.icon-comment