ul.context-menu#utility-row-settings-context-menu
  .block-ver-xxs.border-bottom
    li
      h4 Display
      .row
        .col-xs-10
          p.pull-left Captions
        .col-xs-2
          .toggle.toggle-on.pull-right#toggle-show-caption
      .row
        .col-xs-10
          p.pull-left.tight Filenames
        .col-xs-2
          .toggle.toggle-off.pull-right#toggle-show-filename
  
  .block-ver-xs.border-bottom.text-center.btn-view-option-container
    .btn-view-option.disabled.btn-view-option-sm: i.icon.icon-grid-sm
    .btn-view-option.btn-view-option-md: i.icon.icon-grid-md
    .btn-view-option.disabled.btn-view-option-lg: i.icon.icon-grid-lg
    .btn-view-option.disabled.btn-view-option-details: i.icon.icon-grid-details

  .block-ver-xxs.border-bottom
    li
      h4 Download Preferences
      .block-bot-xs
        p Images:
        form
          label.checkbox-radio(for="best-quality")
            input#best-quality(type="radio" name="image-quality" value="best-quality" checked)
            span Best quality
          label.checkbox-radio(for="standard-quality")
            input#standard-quality(type="radio" name="image-quality" value="standard-quality")
            span Standard quality
      .block
        p Design Assets:
        form
          label.checkbox-radio(for="#design-file")
            input(type="radio" name="design-quality" value="design-file" checked)
            span Design file
          label.checkbox-radio(for="#flat-image")
            input(type="radio" name="design-quality" value="flat-image")
            span Flat image
  .block-ver-xxs.text-center
    li
      span.text-underline More Settings