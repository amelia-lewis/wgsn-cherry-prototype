.modal#share-modal
  .modal-header
    h2.pull-left.tight Share
    i.fa.fa-times.pull-right.hoverable.close-modal

  .modal-content
    .block-sm.border
      h3 Invite people
      .block-sm.border

    .block-top-sm
      h3 Who has access

      .border.share-user-container
        mixin share-user(img, initials, name, owner, permission)
          .row.share-user.border-bottom
            .col-xs-6
              if img
                .avatar(style="background-image: url('" + "')")
              else
                .avatar= initials

              .block-ver-xs.inline-block: span= name
            
            .col-xs-6.text-right
              if owner == "yes"
                .block-xs.inline-block: span Is Owner

              if owner == "no"
                if permission == "edit"
                  .block-left-xs.inline-block: span Can edit

                if permission == "view"
                  .block-left-xs.inline-block: span Can view

                .block-xs.inline-block: i.fa.fa-caret-down
                .block-xs.inline-block: i.fa.fa-times-circle-o

        +share-user("", "AL", "Amelia Lewis", "yes", "")
        +share-user("", "JR", "Julian Ramirez", "no", "edit")
        +share-user("", "AH", "Andrew Harris", "no", "view")
        +share-user("", "SC", "Sansan Chen", "no", "view")
        +share-user("", "SF", "Sarah Freiser", "no", "view")
        +share-user("", "NA", "Nicky Ashwell", "no", "view")
        +share-user("", "HS", "Hema Sivaram", "no", "view")
        +share-user("", "AG", "Anna Glassman", "no", "view")
        +share-user("", "HZ", "Hans Zhou", "no", "view")
        +share-user("", "PT", "Pathik Tanna", "no", "view")


  .modal-footer
    p.tight.hoverable.pull-left.close-modal Cancel
    .btn.btn-white.pull-right Done