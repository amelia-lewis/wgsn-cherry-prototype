extends modal

block append modal-vars
  - id = "send"
  - title = "Email"

block modal-content
  #send-step-1
    .row
      .col-xs-12
        h3 Layout

    .row.block-bot-md.border-bottom
      .col-xs-12
        .block-right-xs.inline-block.hoverable
          .print-layout-tile.pp-1.active
            .layout-tile-container
              .block
            p 1 per page

        .block-right-xs.inline-block.hoverable
          .print-layout-tile.pp-2
            .layout-tile-container
              .block
              .block
            p 2 per page

        .block-right-xs.inline-block.hoverable
          .print-layout-tile.pp-3
            .layout-tile-container
              .block
              .block
              .block
            p 3 per page

        .block-right-xs.inline-block.hoverable
          .print-layout-tile.pp-4
            .layout-tile-container
              .block
              .block
              .block
              .block
            p 4 per page

        .block.inline-block.hoverable
          .print-layout-tile.pp-thumbnails
            .layout-tile-container
              .block
              .block
              .block
              .block
              .block
              .block
              .block
              .block
              .block
            p Thumbnails

    .row.block-top-md.block-bot-xs
      .col-xs-2
        p.block-top-xs Paper size:
        
      .col-xs-10
        select.pull-left
          option Letter (8.5" x 11")
          option Legal (8.5" x 14")
          option Tabloid (11" x 17")
          option A4 (297 x 210mm)
          option A3 (420 x 297mm)

    .row.border-bottom.block-bot-md
      .col-xs-2
        p.block-top-xs Orientation:
        
      .col-xs-10
        select.pull-left
          option Landscape
          option Portrait

    .row.block-top-md.block-bot-xs
      .col-xs-12
        .block-right-md.pull-left
          label.checkbox-radio(for='print-filename') Filename
            input#print-filename(type='checkbox')

        .block-right-md.pull-left
          label.checkbox-radio(for='print-details') Details
            input#print-details(type='checkbox')

        .block-right-md.pull-left
          label.checkbox-radio(for='print-comments') Comments
            input#print-comments(type='checkbox')

    .row
      .col-xs-12
        .block-top-xs.block-right-md.pull-left
          label.checkbox-radio(for='print-page-title') Page title
            input#print-page-title(type='checkbox')

        .block-right-md.pull-left
          input(type='text', placeholder='Page title')

  #send-step-2
    .row
      .col-xs-12
        form
          label Recipients
            //- ul#myTags
            input(type="text", placeholder="Enter email addresses, separated with commas")

          label Subject
            span.optional (Optional)
            input(type="text", placeholder="A subject for your email")

          label Message
            span.optional (Optional)
            textarea(placeholder="Message")

          label.checkbox-radio(for="send-comments") Include comments
            input#send-comments(type="checkbox" checked)

          label.checkbox-radio(for="send-children") Include nested folders
            input#send-children(type="checkbox" checked)

          label.checkbox-radio(for="receipt-notification") Notify me when message is received.
            input#receipt-notification(type="checkbox" checked)