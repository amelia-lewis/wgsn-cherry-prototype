extends modal

block append modal-vars
  - id = "create-new-board"
  - title = "Create new folder"
  - type = "simple-modal"

block modal-content
  .row
    .col-xs-12
      form
        label Name
          input(type="text", placeholder="Folder name")

        label Description
          span.optional (Optional)
          textarea(placeholder="A description to tell your teammates what this folder is for.")