block modal-vars
  - var id = null
  - var title = null
  - var type = null

.modal(id=id + "-modal" class=type)
  .modal-header
    h3.pull-left.tight= title
    p.pull-left.right.num-of-files 1 image
    i.icon.icon-cross.pull-right.hoverable.close-modal

  .modal-content
    block modal-content

  .modal-footer.text-right
    //- p.tight.text-grey.text-underline.block-top-xs.hoverable.pull-left.close-modal Cancel
    .block-right-sm.inline-block: .btn.btn-white.close-modal Cancel
    .inline-block: .btn.btn-black.close-modal Done