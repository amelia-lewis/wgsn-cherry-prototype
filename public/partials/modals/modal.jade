block modal-vars
  - var id = null
  - var title = null
  - var type = null
  - var confirmbtn = null

.modal(id=id + "-modal" class=type)
  .modal-header
    h3.pull-left.tight= title
    p.pull-left.right.num-of-files 1 image
    i.icon.icon-cross.pull-right.hoverable.close-modal

  .modal-content
    block modal-content

  .modal-footer.text-right
    .block-right-sm.inline-block: .btn.btn-white.close-modal Cancel
    if confirmbtn
      .inline-block: .btn.btn-black.btn-modal.close-modal= confirmbtn
    else
      .inline-block: .btn.btn-black.btn-modal.close-modal Done