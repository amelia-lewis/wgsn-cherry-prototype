.modal.simple-modal#rename-board-modal
  .modal-header
    h2.pull-left.tight Rename Board
    i.icon.icon-cross.pull-right.hoverable.close-modal

  .modal-content
    .block-bot-sm
      input(type="text", placeholder="Enter a new name for your board")

  .modal-footer
    p.tight.block-top-xs.hoverable.pull-left.close-modal Cancel
    .btn.btn-white.pull-right.close-modal Done