extends modal

block append modal-vars
  - id = "print"
  - title = "Print"

block modal-content
  .row
    .col-xs-12
      h3 Layout

  .row.block-bot-md.border-bottom
    .col-xs-12
      .block-right-xs.inline-block.hoverable
        .print-layout-tile.pp-1.active
          .layout-tile-container
            .block
          p 1 per page

      .block-right-xs.inline-block.hoverable
        .print-layout-tile.pp-2
          .layout-tile-container
            .block
            .block
          p 2 per page

      .block-right-xs.inline-block.hoverable
        .print-layout-tile.pp-3
          .layout-tile-container
            .block
            .block
            .block
          p 3 per page

      .block-right-xs.inline-block.hoverable
        .print-layout-tile.pp-4
          .layout-tile-container
            .block
            .block
            .block
            .block
          p 4 per page

      .block.inline-block.hoverable
        .print-layout-tile.pp-thumbnails
          .layout-tile-container
            .block
            .block
            .block
            .block
            .block
            .block
            .block
            .block
            .block
          p Thumbnails

  .row.block-top-md.block-bot-xs
    .col-xs-2
      p.block-top-xs Paper size:
      
    .col-xs-10
      select.pull-left
        option Letter (8.5" x 11")
        option Legal (8.5" x 14")
        option Tabloid (11" x 17")
        option A4 (297 x 210mm)
        option A3 (420 x 297mm)

  .row.border-bottom.block-bot-md
    .col-xs-2
      p.block-top-xs Orientation:
      
    .col-xs-10
      select.pull-left
        option Landscape
        option Portrait

  .row.block-top-md.block-bot-xs
    .col-xs-12
      .block-right-md.pull-left
        label.checkbox-radio(for='print-page-count') Page count
          input#print-page-count(type='checkbox')

      .block-right-md.pull-left
        label.checkbox-radio(for='print-filename') Filename
          input#print-filename(type='checkbox')

      .block-right-md.pull-left
        label.checkbox-radio(for='print-details') Details
          input#print-details(type='checkbox')

      .block-right-md.pull-left
        label.checkbox-radio(for='print-comments') Comments
          input#print-comments(type='checkbox')

  .row
    .col-xs-12
      .block-top-xs.block-right-md.pull-left
        label.checkbox-radio(for='print-page-title') Page title
          input#print-page-title(type='checkbox')

      .block-right-md.pull-left
        input(type='text', placeholder='Page title')