mixin file(type, img, original, comments, filename, ...caption)
  .file.hoverable.show-caption(class="file-type-" + type)
    img(src=img)
    
    .caption-container.border-top
      ul.clean
        each item in caption
          li= item
        li.filename.block-top-xs= filename

    .file-select-state
    
    .file-utilities
      .btn-container.text-center.block-ver-sm
        .btn.btn-colored.btn-add-to-board Add to board
        .btn.btn-colored.btn-open Open
        .btn.btn-clear.btn-item-menu: i.icon.icon-ellipsis
        include context-menus/item-context-menu

    i.file-checkbox.icon.icon-tick-circle
    i.file-heart.icon.icon-heart-o
    
    if comments == true
      i.file-comment.icon.icon-comment-filled


mixin file-details-view(type, img, original, comments, filename, ...caption)
  .file-details-view(class="file-type-" + type)
    .thumb-container.hoverable
      img(src=img)

      if comments == true
        i.file-comment.icon.icon-comment-filled

      .file-utilities-1
        i.file-checkbox.icon.icon-tick-circle
        i.file-heart.icon.icon-heart-o
    
    .caption-container.block-hor-md.block-ver-sm
      .block-bot-sm
        ul.clean
          li.font-wgsn= type
          each item in caption
            li.caption.text-bold= item

      .block-right-sm.block-bot-sm.inline-block
        ul.clean
          li.tight Image name:
          li.tight Format:
          li.tight Market:
          li.tight View:
          li.tight Category:
      .block-right-sm.block-bot-sm.inline-block
        ul.clean
          li.tight yzy_aw16_003.jpg
          li.tight JPG
          li.tight Menswear
          li.tight Complete look
          li.tight Showroom
      
      .block-top-xxs.block-bot-sm.border-top
        ul.clean.file-utilities-2
          li.block-xs.tight.inline-block.hoverable.btn-open: i.icon.icon-export
          li.block-xs.tight.inline-block.hoverable.btn-add-to-board: i.icon.icon-plus-circle
          li.block-xs.tight.inline-block.hoverable: i.icon.icon-download
          li.block-xs.tight.inline-block.hoverable: i.icon.icon-print
          li.block-xs.tight.inline-block.hoverable: i.icon.icon-crop
          li.block-xs.tight.inline-block.hoverable.btn-send: i.icon.icon-paper-plane
          li.block-xs.tight.inline-block.hoverable.hidden-image-library: i.icon.icon-trash