extends layout

block append vars
  - bodyclass = 'view-options'

mixin file()
  .file-tile
    .file-container
      .file: i.fa.fa-4x.fa-file
      
      .file-type-label
        i.fa.fa-file
        span File type
  
    .caption-container
      ul.caption
        li Chanel
        li Spring/Summer
        li Paris

