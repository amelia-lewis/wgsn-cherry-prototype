extends layout

block append vars
  - bodyclass = 'workspace-view'

block prepend title
  | Workspace | 

block content
  include partials/header

  .row.title-row.border-bottom
    .block-sm.title-block.pull-left
      h2.tight.block-inline WGSN Workspace
      p.block-inline.block-hor-sm
        span My Boards
        i.fa.fa-angle-right
        span Fashion Shows
        i.fa.fa-angle-right
        span Yeezy
        i.fa.fa-caret-down
    
    .block-xs.btn-comments-panel.text-center.border-left.pull-right: i.fa.fa-comment-o

    .share-block.block-xs.text-right.pull-right
      a.btn.btn-white.tight.pull-right#btn-sharing-settings(href="") Share Board
      ul.clean.pull-right
        li.hoverable.owner.online(style="background-image: url('https://media.licdn.com/mpr/mpr/shrinknp_400_400/p/7/005/05b/332/0aa54b4.jpg')"): span.sharing-label Amelia Lewis is the owner
        li.divider
        li.hoverable.online(style="background-image: url('https://media.licdn.com/mpr/mpr/shrinknp_400_400/AAEAAQAAAAAAAAT6AAAAJGZiMmIwM2E3LTMzNzMtNDEzNi1iN2JhLWJlZmYzM2MwNmI2Nw.jpg')"): span.sharing-label Julian Ramirez can edit
        li.hoverable(style="background-image: url('https://media.licdn.com/mpr/mpr/shrinknp_400_400/AAEAAQAAAAAAAAFZAAAAJDM1YTk4OTc5LTJjZGUtNGJkMS1iMTM4LTBmMjIzYTM3NGYzMQ.jpg')"): span.sharing-label Nicky Ashwell can edit
        li.hoverable.online.active(style="background-image: url('https://media.licdn.com/media/AAEAAQAAAAAAAAZVAAAAJDBlZWUwZWE0LTk1OWYtNGMyYi1iYmU5LTA3NDNlNDYxZmYwMQ.jpg')"): span.sharing-label Sansan Chen can edit
        li.hoverable(style="background-image: url('https://media.licdn.com/mpr/mpr/shrinknp_400_400/p/1/005/06d/1ea/349ef69.jpg')"): span.sharing-label Andrew Harris can edit
        li.hoverable.sharing-other +6

  .row.page-content.show-left-side-panel
    include partials/workspace/left-side-panel
    include partials/right-side-panel
    include partials/workspace/comments-panel

  .overlay
  include partials/item-detail-modal