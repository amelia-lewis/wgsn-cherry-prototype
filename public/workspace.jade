extends layout

block append vars
  - bodyclass = 'workspace-view'

block content
  include partials/header

  .row.title-row.border-bottom.bg-grey
    .block-xs.title-block.pull-left
      h2.tight
        span.block-inline WGSN Workspace
        .smaller.block-inline
          span My Boards
          i.fa.fa-angle-right
          span Fashion Shows
          i.fa.fa-angle-right
          span Yeezy
    
    .block-xs.share-block.text-right.pull-left
      a.btn.btn-white.tight.btn-sharing-settings.pull-right(href="") Sharing settings
      ul.clean.pull-right
        li.hoverable.owner.online(style="background-image: url('https://media.licdn.com/mpr/mpr/shrinknp_400_400/p/7/005/05b/332/0aa54b4.jpg')"): span.sharing-label Amelia Lewis is the owner
        li.divider
        li.hoverable(style="background-image: url('https://media.licdn.com/mpr/mpr/shrinknp_400_400/p/7/005/053/3cf/38e34ac.jpg')"): span.sharing-label Julian Ramirez can edit
        li.hoverable(style="background-image: url('https://media.licdn.com/mpr/mpr/shrinknp_400_400/AAEAAQAAAAAAAAFZAAAAJDM1YTk4OTc5LTJjZGUtNGJkMS1iMTM4LTBmMjIzYTM3NGYzMQ.jpg')"): span.sharing-label Nicky Ashwell can edit
        li.hoverable.online(style="background-image: url('https://media.licdn.com/media/AAEAAQAAAAAAAAZVAAAAJDBlZWUwZWE0LTk1OWYtNGMyYi1iYmU5LTA3NDNlNDYxZmYwMQ.jpg')"): span.sharing-label Sansan Chen can edit
        li.hoverable(style="background-image: url('https://media.licdn.com/mpr/mpr/shrinknp_400_400/p/1/005/06d/1ea/349ef69.jpg')"): span.sharing-label Andrew Harris can edit
        li.hoverable.sharing-other +6
    
    .block-xs.btn-comments-panel.text-center.border-left.pull-right: i.fa.fa-comment-o

  .row.page-content.show-left-side-panel
    include partials/workspace/left-side-panel
    include partials/right-side-panel
    include partials/workspace/comments-panel

  .overlay
  include partials/item-detail-modal