extends ../layout

block append vars
  - bodyclass = 'image-library-view'

block prepend title
  | Image Library | 

block content
  .row.page-content.show-left-side-panel
    include ../partials/image-library/left-side-panel
    
    .right-side-panel
      .row.title-row.border-bottom.block-hor-md
        .block-ver-sm.pull-left
          h1.tight.inline-block Image Library
          h4.text-grey.inline-block 200,000 results

        .utility-block.pull-right
          .flex-center.pull-left.block-hor-sm.hoverable.btn-saved-searches
            i.icon.icon-bookmark
            include ../partials/image-library/saved-searches
          
          .flex-center.input-container.pull-left.block-right-sm
            input(type="text", placeholder="Search Image Library")
            span.icon-container.border: i.icon.icon-search
          
          .flex-center.pull-left
            .btn-view-option.disabled.btn-view-option-sm: i.icon.icon-grid-sm
            .btn-view-option.btn-view-option-md: i.icon.icon-grid-md
            .btn-view-option.disabled.btn-view-option-lg: i.icon.icon-grid-lg
            .btn-view-option.disabled.btn-view-option-details: i.icon.icon-grid-details

          .flex-center.pull-left.block-left-xs
            .block-left-xs.pull-left.flex-center.hoverable.btn-settings
              i.icon.icon-gear
              include ../partials/context-menus/utility-row-settings-context-menu

        include ../partials/floating-utility-row

      .btn-left-side-panel.hoverable: i.icon.icon-angle-left
      include ../partials/images-row